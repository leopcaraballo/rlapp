
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000

# URL base para SignalR (ws:// en producción). Si se omite, se usa API_BASE_URL.
NEXT_PUBLIC_WS_URL=http://localhost:5000

# Poner en "true" para deshabilitar SignalR y usar solo polling REST.
# Útil cuando WaitingRoomHub aún no está implementado en el backend.
NEXT_PUBLIC_WS_DISABLED=false

# ID de la cola principal del backend. Debe existir (creada con el primer check-in).
NEXT_PUBLIC_DEFAULT_QUEUE_ID=QUEUE-01

# Intervalo de polling en ms (por defecto: 3000)
NEXT_PUBLIC_POLLING_INTERVAL=3000
